generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Service {
  id              Int            @id @default(autoincrement())
  title           String
  description     String
  serviceBaseType ServiceBaseEnum
  servicePriceOnsite Int?        // Price for onsite service
  servicePriceRemote Int?        // Price for remote service
  isRemote        Boolean        // Indicate whether the service is remote
  imageHref       String
}

enum ServiceBaseEnum {
  personal
  business
  enterprise
}
